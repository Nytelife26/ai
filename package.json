{
	"name": "@skyra/ai",
	"version": "1.0.0",
	"description": "Advanced Gaming AI for Skyra",
	"author": "kyranet <kyradiscord@gmail.com>",
	"license": "MIT",
	"main": "build/node/main.js",
	"module": "build/node/main.mjs",
	"types": "build/node/main.d.ts",
	"scripts": {
		"prepublishOnly": "yarn build",
		"clean": "rimraf build",
		"build": "run-p build:node build:cpp",
		"build:cpp": "run-s gyp**",
		"build:node": "rollup -c rollup.config.ts",
		"gypconfigure": "node-gyp configure",
		"gypbuild": "node-gyp build",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest"
	},
	"dependencies": {
		"bindings": "^1.5.0",
		"node-addon-api": "*"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@sapphire/ts-config": "^1.0.0",
		"@types/bindings": "^1.3.0",
		"@types/node": "^14.11.1",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^4.3.0",
		"node-gyp": "^7.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.1",
		"pretty-quick": "^3.0.2",
		"rollup": "^2.26.10",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.27.2",
		"standard-version": "^9.0.0",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2"
	},
	"files": [
		"build/node",
		"!build/node/.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/ai.git"
	},
	"bugs": {
		"url": "https://github.com/skyra-project/skyra/issues"
	},
	"keywords": [
		"discord.js",
		"klasa",
		"bot",
		"standalone"
	],
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"gypfile": true
}
